{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Py Debug pk_host",
            "type": "debugpy",
            "request": "launch",
            "program": "pk_host.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Py Debug Forwarder to localhost",
            "type": "debugpy",
            "request": "launch",
            "program": "pk_host.py",
            "console": "integratedTerminal",
            "args": ["--host", "127.0.0.1"],
        },
        {
            "name": "Py Debug Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}"
        }
    ]
}