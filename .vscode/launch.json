{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Py Debug PolyHost",
            "type": "debugpy",
            "request": "launch",
            "module": "polyhost",
            "console": "integratedTerminal"
        },
        {
            "name": "Py Debug PolyForwarder to localhost",
            "type": "debugpy",
            "request": "launch",
            "module": "polyhost",
            "console": "integratedTerminal",
            "args": ["--host", "127.0.0.1"],
        },
        {
            "name": "Py Debug Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}"
        }
    ]
}