{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "gcc", // The compiler command
            "args": [
                "-fdiagnostics-color=always", // Makes compiler output more readable
                "-g",                         // Generates debug information (essential for debugging!)
                "${file}",                    // The active .c file
                "-o",                         // Output flag
                "${fileDirname}/${fileBasenameNoExtension}" // The name and path of the output executable
            ],
            "options": {
                "cwd": "${fileDirname}" // Execute the command in the directory of the C file
            },
            "problemMatcher": [
                "$gcc" // VS Code uses this to parse compiler errors and warnings
            ],
            "group": {
                "kind": "build",
                "isDefault": true // Makes this the default build task
            },
            "detail": "Task generated by Debugger."
        }
    ]
}